<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:ignore="rtlHardcoded">

  <View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/divider_dark_theme"/>

  <RelativeLayout
    android:id="@+id/rl_favorites"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/selector_default">

    <TextView
      android:id="@+id/tv_favorites"
      style="@style/text_body1_dark"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_toEndOf="@+id/iv_favorites"
      android:layout_toRightOf="@+id/iv_favorites"
      android:gravity="center_vertical"
      android:maxLines="1"
      android:paddingLeft="@dimen/first_keyline"
      android:paddingRight="@dimen/first_keyline"
      android:text="@string/favorites"/>

    <ImageView
      android:id="@+id/iv_favorites"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_alignBottom="@+id/tv_favorites"
      android:layout_marginLeft="16dp"
      android:gravity="center_vertical"
      android:src="@drawable/ic_favorite_white_24dp"/>

  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_about"
      style="@style/text_caption_dark"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/list_item_height"
      android:background="@drawable/selector_default"
      android:gravity="center_vertical"
      android:maxLines="1"
      android:paddingLeft="@dimen/first_keyline"
      android:paddingRight="@dimen/first_keyline"
      android:text="@string/about"
      android:textAllCaps="true"/>

    <TextView
      android:id="@+id/tv_rate"
      style="@style/text_caption_dark"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/list_item_height"
      android:background="@drawable/selector_default"
      android:gravity="center_vertical"
      android:maxLines="1"
      android:paddingLeft="@dimen/first_keyline"
      android:paddingRight="@dimen/first_keyline"
      android:text="@string/rate"
      android:textAllCaps="true"/>

  </LinearLayout>

</LinearLayout>